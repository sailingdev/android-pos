<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/kitchen_transaction_product_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:text="Meal1 (2) - Desc"
            android:textSize="17sp"
            android:padding="5dp"
            android:clickable="false"
            android:textColor="@color/colorBlack"/>


        <TextView
            android:id="@+id/btn_print"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_35"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Print"
            android:textColor="@color/colorWhite"
            android:background="@drawable/back_blue_round"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/btn_served"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_35"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Served"
            android:textColor="@color/colorWhite"
            android:background="@drawable/back_primary_round"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dip_35"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:background="@drawable/back_primary_round"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>